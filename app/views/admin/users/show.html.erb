<div class="container">
  <div class="row">
    <div class="col-12 text-center">
      <h4 class="col-md-6 mx-auto top1 shadow my-5"><i class="fas fa-user"></i>ユーザー詳細</h4>
      <div class="col-md-9 mx-auto background shadow p-5">
        <h5><i class="fas fa-user-circle"></i> 名前</h5>
        <p><%= @user.name %></p>
        <h5><i class="far fa-file-alt"></i> 自己紹介文</h5>
        <p><%= @user.introduction %></p>
        <h5><i class="fa-solid fa-earth-americas"></i> 国籍</h5>
        <p><%= @user.counrty.name %></p>
        <h5><i class="fas fa-envelope"></i> メールアドレス</h5>
        <p><%= @user.email %></p>
        <div class="d-flex justify-content-center">
          <div class="me-3 fs-5 mb-3">フォロー</div>
          <div>
            <%= link_to admin_user_followings_path(@user), class: 'btn btn-success px-4' do %>
              <%= @user.followings.count %>
            <% end %>
          </div>
        </div>
        <div class="d-flex justify-content-center">
          <div class="me-3 fs-5 mb-3">フォロワー</div>
          <div>
            <%= link_to admin_user_followers_path(@user), class: 'btn btn-primary px-4' do %>
              <%= @user.followers.count %>
            <% end %>
          </div>
        </div>






        <p class="mt-5"><%= link_to edit_admin_user_path(@user), class: "btn btn-outline-success w-50" do %>
            編集
           <% end %></p>
        <p><%= link_to admin_user_posts_path(@user), class: "btn btn-outline-dark w-50" do %>
            投稿一覧 (<%= @user.posts.count %>)
          <% end %></p>
        <p><%= link_to admin_user_post_comments_path(@user), class: "btn btn-outline-dark w-50" do %>
            コメント一覧 (<%= @user.post_comments.count %>)
          <% end %></p>
      </div>
    </div>
  </div>
</div>