<div class="container">
  <div class="row">
    <div class="col-md-9 col-sm-12 mx-auto">
      <div class="background shadow  my-4 p-5 text-center">
        <h4 class="col-md-6 top1 mx-auto my-4">投稿詳細</h4>
        <div class="post_show col-md-8 mx-auto">
          <p class="small">投稿日時: <%= l @post.created_at %></p>
          <p><%= image_tag @post.get_image,class: "post_image", size: '300x300'%></p>
          <h5>タイトル</h5>
          <p><%= @post.title %></p>
          <h5>本文</h5>
          <div class="post_show">
            <p><%= render_with_tags(@post.explaination) %></p>
          </div>
        </div>

        <div class="d-flex my-5 justify-content-around">
          <div><%= link_to '削除', admin_user_post_path(@post.user, @post), method: :delete, data: {confirm: "投稿を削除します。よろしいですか？"},class: 'btn btn-danger px-5'%></div>
          <div class="ms-3"><%= link_to '投稿一覧ページに戻る', admin_user_posts_path, class: 'btn btn-success '%></div>
        </div>
      </div>
    </div>
  </div>
</div>
