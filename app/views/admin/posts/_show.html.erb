<div class="col-lg-6">
  <h4><i class="fas fa-mug-hot"></i> 投稿詳細</h4>
  <div class="post_show">
    <p><%= link_to user_path(post.user),class: "text-dark" do %>
       <%= image_tag post.user.get_image, class: "user_post" %>
       <%= post.user.name %>
       <% end %>
    &ensp;<%= l post.created_at %>
    </p>
    <%= image_tag post.get_image,class: "post_image"%>
  </div>
</div>
<div class="col-lg-6 mt-4">
  <div class="post_show">
    <h5><strong><%= post.title %></strong></h5>
    <p><%= render_with_tags(simple_format(post.explaination))%></p>
    <div class="text-center mt-3">
     <%= link_to '削除', post, method: :delete, data: {confirm: "投稿を削除します。よろしいですか？"},class: 'btn btn-danger w-50'%>
    </div>
  </div>
</div>