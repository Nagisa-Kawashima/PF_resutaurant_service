<div class="container">
  <div class="row">
    <!--投稿詳細-->
    <%= render 'show', post: @post, user_post: @user %>
    <div class ="col-md-9  col-sm-12 mx-auto">
        <!--コメント表示-->
      <div class="comments-area background shadow my-2 p-4 text-center mx-auto">
          <%= render 'public/post_comments/index', post: @post %>
      </div>
        <!--コメントフォーム-->
      <div class="new-comment">
        <%= render 'public/post_comments/form', post: @post, comment: @comment %>
      </div>
      <div class="pagination">
        <%= paginate @comments %>
      </div>
    </div>
  </div>
</div>
