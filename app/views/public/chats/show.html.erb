<div class="container">
  <div class="row">
    <div class="col-md-9 col-sm-11 background shadow my-5 px-5 mx-auto">
      <h5 class="text-center mt-5 overflow-auto"><%= image_tag @user.get_profile_image, class: "user_image"%>&ensp;<%= @user.name %>さんとのチャットルーム <i class="far fa-comment"></i></h5>
      <div>
        <%= form_with model: @chat do |f| %>
          <%= f.text_area :message, class: "form-control", placeholder: "ここにメッセージを入力してみましょう！！" %>
          <%= f.hidden_field :room_id %>
          <!--<div class="text-start"><%#= link_to '戻る', user_chat_rooms_path, class: 'btn btn-danger w-25'%></div>-->
          <div class="text-end"><%= f.submit "送信する",class: "mt-3 btn btn-success" %></div>
          <% end %>
      </div>

      <% if @chats.present? %>
        <div class="message">
          <%= render "public/chats/chat", chats: @chats, user: @user %>
          <div class="pagination">
            <%= paginate @chats %>
          </div>
        </div>
      <% else %>
        <p class="text-center"><%= @user.name %>さんと、チャットをはじめよう！</p>
      <% end %>
    </div>
  </div>
</div>