<div class="container">
  <div class="row mb-3 d-flex justify-content-center">
    <div class="col-8">
      <h5 class="text-center mt-5"><%= image_tag @user.get_profile_image, class: "user_image"%>&ensp;<%= @user.name %>さんとのチャットルーム <i class="far fa-comment"></i></h5>
      <div>
        <%= form_with model: @chat do |f| %>
          <%= f.text_area :message, class: "form-control" %>
          <%= f.hidden_field :room_id %>
          <div class="text-end"><%= f.submit "送信する",class: "mt-3 btn btn-outline-secondary" %></div>
          <% end %>
      </div>

      <% if @chats.present? %>
        <div class="message">
          <%= render "public/chats/chat", chats: @chats, user: @user %>
          <div class="pagination">
            <%= paginate @chats %>
          </div>
        </div>
      <% else %>
        <p class="text-center"><%= @user.name %>さんと、チャットをはじめよう！</p>
      <% end %>
    </div>
  </div>
</div>