<div class="container">
  <div class="row">
    <div class="background col-md-8 text-center mx-auto shadow mt-5 pb-5">
      <h5 class="text-center  col-md-5 top1 mx-auto my-5"><i class="fas fa-mug-hot"></i> お問い合わせフォーム</h5>
      <% if @contact.errors.any? %>
      <div id="error_explanation">
        <ul>
          <% @contact.errors.full_messages.each do |message| %>
          <li><%= message %></li>
          <% end %>
        </ul>
      </div>
      <% end %>
       <div class="contact-form col-md-8 mx-auto">
          <%= form_with(model: @contact, local: true) do |f| %>
            <div class="correct-text-field">
              <p><%= f.label "お名前" %></p>
              <%= f.text_field :name, placeholder: "お名前", class: "form-control" %>
            </div>
            <div class="correct-text-field mt-2">
              <p><%= f.label "お問合せ内容" %></p>
              <%= f.text_area :content, placeholder: "お問合せ内容を入力してください", class: "form-control" %>
            </div>
            <div class="d-flex justify-content-around mt-3">
              <div>
                <%= f.submit "送信", class: "btn btn-success px-5" do %>
                  <i class="fas fa-paper-plane"></i>
                <% end %>
              </div>
              <div>
                <%= link_to "戻る", root_path, class:"btn btn-secondary px-5" %>
              </div>
            </div>
          <% end %>
        </div>
    </div>
  </div>
</div>







