<div class="user_index mt-5 mx-auto p-3 background shadow">
  <table class='table table-sm' >
    <thead>
      <tr class="text-center">
        <th>image</th>
        <th>name</th>
        <th>follow</th>
        <th>follower</th>
      </tr>
    </thead>
    <tbody>
    <% users.each do |user| %>
      <tr class="text-center">
      <% if user.is_deleted == false %>
        <td  width="20%"><%= image_tag user.get_profile_image,class: "user_profile"%></td>
        <td><%= user.name %></td>
        <td width="20%"><%= user.followings.count %></td>
        <td  width="25%"><%= user.followers.count %></td>
      </tr>
      <tr>
        <td>
          <% if current_user != user %>
           <% if current_user.following?(user) %>
            <%= link_to "フォロー外す", user_relationships_path(user.id), method: :delete, class: "btn btn-success" %>
           <% else %>
            <%= link_to "フォローする", user_relationships_path(user.id), method: :post, class: "btn btn-primary" %>
           <% end %>
          <% end %>
        </td>
        <td><%= link_to '詳細へ', user, class: "btn btn-secondary px-2" %></td>
      </tr>
      <% end %>
    <% end %>
    </tbody>
  </table>
</div>
<div class="pagination">
  <%= paginate users %>
</div>
