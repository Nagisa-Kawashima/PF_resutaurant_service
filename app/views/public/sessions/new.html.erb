<div class="container">
  <div class="row">
    <div class="login col-md-8 mx-auto text-center mt-5 py-4 background shadow">
        <h4 class="text-center mt-3"><i class="fas fa-sign-in-alt"></i> ログイン</h4>
        <%= form_with model: resource, url: user_session_path do |f| %>
          <div class="field mt-4">
            <i class="fas fa-envelope"></i> <%= f.label :メールアドレス %><br>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "メールアドレス", class: "form-control w-50 mx-auto mt-2" %>
          </div>
          <div class="field mt-3">
            <i class="fas fa-lock"></i> <%= f.label :パスワード %><br>
            <%= f.password_field :password, autocomplete: "current-password", placeholder: "パスワード", class: "form-control w-50 mx-auto mt-2" %>
          </div>
          <div class="my-4">
            <%= f.submit "ログイン", class: "btn btn-dark w-50" %>
          </div>
        <% end %>
    </div>
    <div class="login col-md-8 mx-auto text-center my-5 py-4 background shadow">
      <p class="mt-3">アカウントをお持ちでない方</p>
      <%= render "public/shared/links" %>
    </div>
  </div>
</div>